<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                    xmlns:local="clr-namespace:DnDGenerator.Models"
                    x:Class="DnDGenerator.DataTemplates.TitleTemplates"
                    >
    <DataTemplate DataType="{x:Type local:Settlement}">
        <StackPanel>
            <TextBlock Text="Settlement Info" FontWeight="Bold"/>
            <TextBlock Text="{Binding Name}" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Primary industries: "/>
                <ItemsControl ItemsSource="{Binding MainIndustries}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Neighbors: "/>
                <DataGrid ItemsSource="{Binding Neighbors}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Primary Race: "/>
                <TextBlock Text="{Binding PrimaryRace}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Seconary Race: "/>
                <TextBlock Text="{Binding SecondaryRace}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Tertiary Race: "/>
                <TextBlock Text="{Binding TertiaryRace}" />
            </StackPanel>
            <DataGrid ItemsSource="{Binding ImportantPeople}"/>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="Conditions: "/>
                <ListBox ItemsSource="{Binding Conditions}"/>
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:Wilderness}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Margin="10">
                <TextBlock Text="Wilderness Info" FontWeight="Bold"/>
                <TextBlock Text="{Binding Name}" />
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Neighbors: "/>
                    <DataGrid ItemsSource="{Binding Neighbors}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Features"/>
                        <ListBox ItemsSource="{Binding FeaturesString}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="Raiders"/>
                        <ItemsControl ItemsSource="{Binding RaidingParties}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Effects"/>
                    <ListBox ItemsSource="{Binding WildernessEffectsString}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Monster Dens"/>
                    <!--<DataGrid ItemsSource="{Binding Dens}"/>-->
                    <ItemsControl ItemsSource="{Binding DensAsMonster}" ScrollViewer.CanContentScroll="True"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Dungeons"/>
                    <DataGrid ItemsSource="{Binding Dungeons}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Ruins"/>
                    <DataGrid ItemsSource="{Binding Ruins}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Keywords"/>
                    <ListBox ItemsSource="{Binding Keywords}"/>
                </StackPanel>

            </StackPanel>
            <StackPanel Grid.Column="1"  Margin="10">
                <TextBlock Text="Monsters in area"/>
                <ItemsControl ItemsSource="{Binding Monsters}" ScrollViewer.CanContentScroll="True"/>
                <!-- Really should be an encounter table -->
            </StackPanel>
        </Grid>

    </DataTemplate>

    <DataTemplate DataType="{x:Type local:Monster}">
        <Border BorderThickness="1" BorderBrush="DarkSlateGray" Padding="10" CornerRadius="6" Background="#FF1E1E2F" Margin="5">
            <StackPanel>
                <!-- Name + Level -->
                <TextBlock Text="{Binding Name}" FontSize="20" FontWeight="Bold" Foreground="Gold"/>
                <!-- Uri link -->
                <TextBlock Margin="10">
                    <Hyperlink NavigateUri="{Binding Uri}" x:Name="NavigateButton" RequestNavigate="Hyperlink_RequestNavigate" >
                        View in Rules Reference
                    </Hyperlink>
                </TextBlock>


                <StackPanel Orientation="Horizontal" Margin="10">
                    <TextBlock Text="Level: " FontStyle="Italic" Margin="0,0,0,6" Foreground="LightGray"/>
                    <TextBlock Text="{Binding Level}" FontStyle="Italic" Foreground="LightGray" Margin="2"/>


                    <!-- Tags -->
                    <WrapPanel Margin="0,0,0,6">
                        <ItemsControl ItemsSource="{Binding CreatureTypeTags}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#334477" Padding="4" CornerRadius="4" Margin="10">
                                        <TextBlock Text="{Binding}" Foreground="White"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>

                    <!-- Frequency & Predation -->
                    <TextBlock Text="{Binding Frequency}" Foreground="LightSkyBlue" Margin="0,0,0,4"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </DataTemplate>

</ResourceDictionary>